@model LoginViewModel
<div class="main">
    <div class="login-block">
        <h2 class="mb-5 pt-3 px-3 text-white">Вход в приложение</h2>
        <form method="post" asp-controller="Account" asp-action="Login">
            
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3 px-3">
                <label class="form-label text-white" asp-for="Name"></label><br />
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-3 px-3">
                <label class="form-label text-white" asp-for="Password"></label><br />
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group mb-3 px-3">
                <label class="form-label text-white" asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <div class="form-group mb-3 px-3">
                <button class="btn btn-primary" type="submit">Войти</button>
            </div>
        </form>
    </div>
    <div class="text-center m-5">
        <small>
            login:admin<br>
            password:admin
        </small>
        
        
    </div>
</div>
