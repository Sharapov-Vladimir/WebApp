@model Courier
@{
    ViewData["Title"] = "Изменить информацию";

}
<body>
    <form asp-action="Edit" method="post" class="form" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="FirstName">Имя</label>
            <input class="form-control" type="text" asp-for="FirstName" value="@Model?.FirstName" />
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Фамилия</label>
            <input class="form-control" type="text" asp-for="LastName" value="@Model?.LastName" />
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Номер телефона</label>
            <input class="form-control" type="text" asp-for="PhoneNumber" value="@Model?.PhoneNumber" />
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
       <input type="hidden" asp-for="Id" value="@Model?.Id" />
        <input type="submit" class="btn btn-primary" value="Изменить" />


    </form>
</body>